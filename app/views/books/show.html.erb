<!DOCTYPE>
<html lang="ja">
 <head>
  <title>Bookers2</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
  <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
 </head>

 <body>
  <div class="container">
  <% if @newbook.errors.any? %>
  <%= @newbook.errors.count %>errors prohibited this obj from being saved:
   <ul>
    <% @newbook.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
   </ul>
   <% end %>
   <div class="row">
    <div class="col-md-3">
     <table class="table table-user">
      <h2>User info</h2>
      <thead>
       <tr>
       <% if @user.profile_image.attached? %>
       <%= image_tag @user.profile_image, size: "110x110" %>
       <% else %>
       <%= image_tag 'default-image', size: "110x110" %>
       <% end %>
       </tr>
      </thead>
      <tbody>
       <tr>
        <th>Name</th>
        <th><%= @user.name %></th>
       </tr>
       <tr>
        <th>Introduction</th>
        <th><%= @user.introduction %></th>
       </tr>
      </tbody>
     </table>
     <div class="row">
      <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block" do %>
      <i class="fas fa-user-cog"></i>
      <% end %>
     </div>

     <h2 class="mt-3">New book</h2>
     <%= form_with model: @newbook do |f| %>
     <p>Title</p>
     <!--入力画面-->
     <%= f.text_field :title %>
     <p>Opinion</p>
     <!--入力画面-->
     <%= f.text_area :body %>
     <!--Create Bookボタン-->
     <%= f.submit 'Create Book' %>
     <% end %>
    </div>
    <div class="col-md-8 offset-md-1">
     <table class="table book-index">
      <h2>Book detail</h2>
      <table class="table table-user-show">
        <tr>
          <td>
           <%= link_to user_path(@user.id) do %>
           <%= image_tag 'default-image', size: "50x50" %>
           <% end %><br>
           <%= link_to @user.name, user_path(@user.id) %></td>
          <td><%= link_to @book.title %></td>
          <td><%= @book.body %></td>

            <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-sm btn-success"%></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-sm btn-danger" %></td>
        </tr>
      </table>
    </div>
   </div>
  </div>
 </body>
</html>