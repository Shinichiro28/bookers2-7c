<!DOCTYPE html>
<html lang="ja">
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="header">
    <header class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
       <nav class="nav navbar-left">
        <a class="navbar-brand" href="/"><span>Bookers</span></a>
        </nav>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
         <span class="navbar-toggler-icon"></span>
        </button>
        <nav>
         <ul class="nav navbar-nav navbar-right">
           <% if user_signed_in? %>
           <li class="">
             <%= link_to user_path(current_user), class:"nav-link text-light" do %>
             <span class="glyphicon glyphicon-home" aria-hidden="true"> <i class="fas fa-home"></i> Home</span>
             <% end %>
           </li>
           <li class="">
             <%= link_to "/users", class:"nav-link text-light" do %>
             <span class="glyphicon glyphicon-user" aria-hidden="true"> <i class="fas fa-users"></i> Users</span>
             <% end %>
           </li>
           <li class="">
             <%= link_to books_path, class:"nav-link text-light" do %>
             <span class="glyphicon glyphicon-book" aria-hidden="true"> <i class="fas fa-book-open"></i> Books</span>
             <% end %>
           </li>
           <li class="">
             <%= link_to destroy_user_session_path, method: :delete, class:"nav-link text-light" do %>
             <span class="glyphicon glyphicon-log-out" aria-hidden="true"> <i class="fas fa-sign-out-alt"></i> Log out</span>
             <% end %>
           </li>
           <% else %>
           <li class="">
             <%= link_to homes_top_path, class:"nav-link text-light" do %>
             <span class="glyphicon glyphicon-home" aria-hidden="true"> <i class="fas fa-home"></i> Home</span>
             <% end %>
           </li>
           <li class="">
             <%= link_to homes_about_path, class:"nav-link text-light" do %>
             <span class="glyphicon glyphicon-link" aria-hidden="true"> <i class="fas fa-link"></i> About</span>
             <% end %>
           </li>
           <li class="">
             <%= link_to new_user_registration_path, class:"nav-link text-light" do %>
             <span class="glyphicon glyphicon-edit" aria-hidden="true"> <i class="fas fa-user-plus"></i> Sign up</span>
             <% end %>
           </li>
           <li class="">
             <%= link_to new_user_session_path, class:"nav-link text-light" do %>
             <span class="glyphicon glyphicon-log-in" aria-hidden="true"> <i class="fas fa-sign-in-alt"></i> Log in</span>
             <% end %>
           </li>
           <% end %>
          </ul>
        </nav>
      </div>
    </header>
    <div class="body">
     <p class="notice"><%= notice %></p>
    <%= yield %>
    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
   </div>
  </div>
 </body>
</html>